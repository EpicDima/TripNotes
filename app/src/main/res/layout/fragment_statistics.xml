<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            tools:context=".ui.statistics.StatisticsFragment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:text="@string/by_category"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />

            <com.db.williamchart.view.BarChartView
                android:id="@+id/category_barchart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginBottom="28dp"
                app:chart_axis="x"
                app:chart_barsColor="@color/orange"
                app:chart_labelsColor="@color/orange"
                app:chart_labelsSize="14sp"
                app:chart_spacing="32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:text="@string/duration_of_trips"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />

            <com.db.williamchart.view.LineChartView
                android:id="@+id/duration_linechart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginBottom="28dp"
                app:chart_axis="x"
                app:chart_gridEffect="solid"
                app:chart_labelsColor="@color/orange"
                app:chart_labelsSize="15sp"
                app:chart_lineColor="@color/orange"
                app:chart_lineThickness="3dp"
                app:chart_smoothLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:text="@string/number_of_trip_locations"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp" />

            <com.db.williamchart.view.LineChartView
                android:id="@+id/location_linechart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginBottom="28dp"
                app:chart_axis="x"
                app:chart_gridEffect="dashed"
                app:chart_labelsColor="@color/orange"
                app:chart_labelsSize="16sp"
                app:chart_lineColor="@color/orange"
                app:chart_lineThickness="3dp"
                app:chart_smoothLine="true" />

        </LinearLayout>

    </ScrollView>
</layout>